<view id="container" style="width:{{screenWidth + 'px'}};height:{{screenHeight - 49 + 'px'}}">
  <nav id="nav" background-color="#aaaaaa" title="测试" btn-title="测" bind:leftBtnTap="leftBtnTap"></nav>
  <view id="container_right" style="width:{{screenWidth + 'px'}};height:{{screenHeight - 113 + 'px'}};">
    <button bindtap='clickMe'>点我</button>
    <button bindtap='clickMe1'>点我1</button>
  </view>
</view>
<view bindtap='clickMe' id="shadow_view" style="width:{{screenWidth + 'px'}};height:{{screenHeight - 49 + 'px'}};left : {{shadowLeft + 'px'}} ;opacity : {{opacity}}"></view>
<view id="container_left" style="width:{{menuWidth + 'px'}};height:{{screenHeight - 49 + 'px'}};left : {{menuLeft + 'px'}}">
  <button bindtap='clickMe'>菜单</button>
</view>